import java.util.Scanner;
public class Main
{
    // GABRIEL
    static int maior = 0;
    static int menor = 999;
    public static void main(String[] args) {
        Scanner teclado = new Scanner(System.in);
        for (int c=1; c<=5; c++) {
            System.out.printf("Qual é o peso da %sª pessoa em KG? ", c);
        int peso = teclado.nextInt();
        if (peso > maior) {
            maior = peso;
        }
        if (peso < menor) {
            menor = peso;
        }
        }
        System.out.printf("\nO maior peso lido foi de %s KG", maior);
        System.out.printf("\nE o menor peso lido foi de %s KG", menor);
}
}
